<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="id.atumdev.applib.devoptions.activity.SimpleDevOptionActivity">

    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_opt_domain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Web Service Options"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_compiled_repo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Compiled Repository"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_source_repo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Source Repository"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_bottom"
        android:layout_below="@+id/layout_top"
        android:layout_marginTop="30sp"
        android:orientation="vertical">

        <id.atumdev.applib.view.SquareImageWidth
            android:id="@+id/iv_icon_app"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:id="@+id/layaout_appdetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".7"
                    android:paddingEnd="5sp"
                    android:paddingStart="@null"
                    android:text="App Name"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_app_detail_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:paddingEnd="@null"
                    android:paddingStart="5sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".7"
                    android:paddingEnd="5sp"
                    android:paddingStart="@null"
                    android:text="Version"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_app_detail_version"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:paddingEnd="@null"
                    android:paddingStart="5sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".7"
                    android:paddingEnd="5sp"
                    android:paddingStart="@null"
                    android:text="App ID"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_app_detail_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:paddingEnd="@null"
                    android:paddingStart="5sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".7"
                    android:paddingEnd="5sp"
                    android:paddingStart="@null"
                    android:text="Build Type"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_app_detail_build_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:paddingEnd="@null"
                    android:paddingStart="5sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".7"
                    android:paddingEnd="5sp"
                    android:paddingStart="@null"
                    android:text="Version Code"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_app_detail_version_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:paddingEnd="@null"
                    android:paddingStart="5sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".7"
                    android:paddingEnd="5sp"
                    android:paddingStart="@null"
                    android:text="Time Build"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_app_detail_build_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:paddingEnd="@null"
                    android:paddingStart="5sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".7"
                    android:paddingEnd="5sp"
                    android:paddingStart="@null"
                    android:text="Author"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_app_detail_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:paddingEnd="@null"
                    android:paddingStart="5sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="@string/copyright_devoption" />
    </RelativeLayout>

</RelativeLayout>
